# ============================================================
# 41Blog - Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# ============================================================

# ── Firebase Client (Public - safe to expose) ──────────────
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ── Firebase Admin (Server-only - NEVER expose to client) ──
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxx@your_project.iam.gserviceaccount.com
# Replace newlines with \n in the private key
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ── Cloudflare R2 (Server-only) ────────────────────────────
# Endpoint: https://75549bb6c60165f8190d3c0803706fff.r2.cloudflarestorage.com/41blog
R2_ACCOUNT_ID=75549bb6c60165f8190d3c0803706fff
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=41blog
# Get this from: R2 Bucket → Settings → Public Access → Enable → copy the r2.dev URL
R2_PUBLIC_URL=https://pub-0ae0b07a370442c6836d4cfc0edfe24a.r2.dev
# Optional: Custom domain for R2 bucket
# R2_PUBLIC_URL=https://images.yourdomain.com

# ── Admin Configuration ─────────────────────────────────────
# Comma-separated list of admin email addresses
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com,admin2@example.com

# ── App Configuration ───────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=41Blog

# ── Development ─────────────────────────────────────────────
# Set to 'true' to use Firebase emulators locally
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false
